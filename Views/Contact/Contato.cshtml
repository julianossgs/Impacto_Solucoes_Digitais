@model Contato
@{
    ViewData["Title"] = "Contato";
}

<head>
    <meta charset="utf-8" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/contato.css"/>
</head>

<div class="container-fluid" style="margin-top:8.2rem;">
    <div class="row justify-content-center contato">
        <div class="col-lg-12 text-center mb-5">
            <h1 class="text-light display-4 pt-5">Fale com a Soma</h1>

        </div>
        <p class="freepik lead text-end text-secondary"><small>Designed by Freepik</small></p>
    </div>

    
    <div class="row justify-content-center form_contato">
        <div class="row justify-content-center mt-3 mb-4">
            <h2 class="form_contato_title text-center">Tire suas dúvidas.</h2>

        </div>
        

            <div class="col-lg-8 shadow p-3 mb-5 mt-0">

                <form class="row justify-content-center bg-body-tertiary rounded" autocomplete="off" method="post" 
                              asp-controller="Contact" asp-action="SendContato">
                        <div class="col-md-5 mb-3">
                            <label asp-for="Nome" class="form_label form-label">Nome</label>
                            <span class="text-danger h5"><strong> * </strong></span>
                            <input asp-for="Nome" type="text" class="form-control" id="nome"
                                   placeholder="seu nome..." required>
                            <span class="text-danger" asp-validation-for="Nome"></span>
                        </div>
                        <div class="col-md-5 mb-3">
                            <label asp-for="Email" class="form_label form-label">Email</label>
                            <span class="text-danger h5"><strong> * </strong></span>
                            <input asp-for="Email" type="email" class="form-control" id="email"
                                   placeholder="seu email..." required>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="col-md-10 mb-5">
                            <label asp-for="Message" class="form_label form-label">Mensagem</label>
                            <span class="text-danger h5"><strong> * </strong></span>
                            <textarea asp-for="Message" class="form-control" id="msg" rows="5"
                                      placeholder="escreva sua mensagem..." required></textarea>
                            <span class="text-danger" asp-validation-for="Message"></span>
                        </div>
                        <div class="col-md-10 mt-2 text-center">
                    
                            <input type="submit" class="btn btn-outline-primary ps-3 pe-3 rounded-pill fw-bolder w-50" 
                            value="Enviar mensagem" />
                    
                        </div>
                    </form>

            </div>
       
        



        <!--divs p/ auxiliar na responsividade do footer-->
        <div class="d-block d-md-none" style="height: 650px;"></div>
        <div class="d-none d-md-block d-lg-none" style="height: 230px;"></div>
        <div class="d-none d-lg-block" style="height: 400px;"></div>

    </div>

</div>
