@model Contato

@{
    ViewData["Title"] = "Formulário de resposta";
}
  
<head>
    <meta charset="utf-8" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/contato.css" />
</head>

<div class="container-fluid" style="margin-top:8.3rem;">
    <div class="row justify-content-center text-center">
        <div class="col-md-6 shadow p-5 mb-5 mt-5 bg-body-tertiary rounded scale-up-bottom">
            <h3 class="text-secondary display-5 mb-4 fw-bolder">Mensagem enviada com sucesso!</h3>
            <h4 class="mb-4">Em breve entraremos em contato!</h4>
           
            <a class="btn btn-danger rounded-pill pe-3 ps-3 fw-bolder" asp-action="Index" asp-controller="Home">
                <i class="bi bi-x"></i> Fechar
            </a>
        </div>

        <!--divs p/ auxiliar na responsividade do footer-->
        <div class="d-block d-md-none" style="height: 750px;"></div>
        <div class="d-none d-md-block d-lg-none" style="height: 270px;"></div>
        <div class="d-none d-lg-block" style="height: 500px;"></div>
    </div>


</div>
